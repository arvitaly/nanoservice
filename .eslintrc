{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "flowtype"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1,
    "comma-dangle": 0,
    "no-console": 0
  },
  "ignore": [
    "./node_modules",
    "./interfaces"
  ],
  "env": {
    "node": true,
    "es6": true,
    "jasmine": true
  }
}